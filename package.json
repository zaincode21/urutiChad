{
  "name": "uruti-chad",
  "version": "1.0.0",
  "description": "UrutiChad - Retail Management Platform",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start": "node server/index.js",
    "db:migrate": "node server/database/migrate.js",
    "db:seed": "node server/database/seed.js",
    "db:perfume": "node server/database/migrate-perfume.js",
    "db:images": "node server/database/add-product-images.js",
    "db:setup": "npm run db:migrate && npm run db:perfume && npm run db:images",
    "db:migrate-to-postgres": "node server/database/migrate-to-postgresql.js",
    "db:postgres-setup": "npm run db:migrate-to-postgres",
    "db:test-postgres": "node test-postgresql-migration.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:start:prod": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop urutirose-api",
    "pm2:restart": "pm2 restart urutirose-api",
    "pm2:reload": "pm2 reload urutirose-api",
    "pm2:delete": "pm2 delete urutirose-api",
    "pm2:logs": "pm2 logs urutirose-api",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "pm2:save": "pm2 save",
    "pm2:startup": "pm2 startup",
    "pm2:unstartup": "pm2 unstartup",
    "pm2:resurrect": "pm2 resurrect",
    "pm2:flush": "pm2 flush"
  },
  "keywords": [
    "retail",
    "management",
    "multi-currency",
    "pos",
    "inventory"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "html-pdf-node": "^1.0.8",
    "jsonwebtoken": "^9.0.2",
    "jsreport": "^4.10.1",
    "jsreport-chrome-pdf": "^1.10.0",
    "jsreport-core": "^2.10.1",
    "jsreport-handlebars": "^2.1.0",
    "jsreport-html-to-xlsx": "^2.8.6",
    "levenshtein-edit-distance": "^3.0.1",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "pg": "^8.16.3",
    "puppeteer": "^24.16.0",
    "sqlite3": "^5.1.7",
    "string-similarity": "^4.0.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}